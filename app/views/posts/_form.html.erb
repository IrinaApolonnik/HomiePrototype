<section class="S_addItem">
  <h2 class="Q_addItemTitle">Создание поста</h2>
  
    <%= form_with(model: @post) do |form| %>
      <% if post.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="C_addItemsInputs">
        <%= form.label :image_url, style: "display: block" %>
        <%= form.text_field :image_url %>
      </div>
      <div class="C_addItemsInputs">
      <h3>Основное</h3>
      <!-- Поле для названия -->
      <div class="A_addItemInputField">
        <%= form.label :title, class: "Q_addItemLabel" %>
        <%= form.text_field :title, class: "Q_addItemInput" %>
      </div>

      <!-- Поле для описания -->
      <div class="A_addItemInputField">
        <%= form.label :description, class: "Q_addItemLabel" %>
        <%= form.text_area :description, class: "Q_addItemInput" %>
      </div>
    </div>
    <div class="C_addItemsInputs">
      <h3>Теги</h3>
      <% TagCategory.includes(:tags).each do |category| %>
        <div class="A_addItemInputField">
          <h4><%= category.name %></h4>
          <% category.tags.each do |tag| %>
            <div>
              <%= check_box_tag "post[tag_list][]", tag.name, post.tag_list.include?(tag.name), id: "tag_#{tag.id}" %>
              <%= label_tag "tag_#{tag.id}", tag.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>


    <div class="C_addItemActions">
      <!-- Кнопка "Войти" -->
      <%= form.submit "Создать", class: "Q_addItemButton Q_addItemSubmit" %>
      <%= link_to "отменить", root_url, class: "Q_addItemButton Q_additemCancel" %>
    </div>
  <% end %>
</section>
