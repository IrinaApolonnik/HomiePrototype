<!DOCTYPE html>
<html>
    <head>
        <title><%= content_for(:title) || "TUMBA" %></title>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= yield :head %>

        <link rel="manifest" href="/manifest.json">
        <%= favicon_link_tag 'TUMBA.ico' %>

        <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
        <%= javascript_importmap_tags %>
    </head>

    <body>

        <% if notice.present? %>
        <div class="A_systemMessage">
            <img src="<%= asset_path('successNoticeIcon.svg') %>">
            <h3><%= notice %></h3>
        </div>
        <% end %>

        <% if alert.present? %>
        <p class="systemMessage" style="color: red"><%= alert %></p>
        <% end %>
        
        <%= render "menubar" %>

        <%= yield %>

        <div class="wrapper"></div>

        <%= render "footer" %>
    </body>

</html>