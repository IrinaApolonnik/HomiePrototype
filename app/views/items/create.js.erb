// Добавляем товар в список товаров
document.querySelector(".C_itemsList").insertAdjacentHTML("beforeend", `<%= j render partial: 'items/item_form', locals: { item: @item } %>`);
// Скрываем модалку
document.getElementById("modal").classList.add("hidden");

// Очищаем поля формы
const form = document.querySelector(".O_modalItemForm");
form.reset();

// Сброс превью картинки
form.querySelector(".Q_itemImgUpload").classList.add("hidden");
form.querySelector(".Q_itemImgUpload").src = "";
form.querySelectorAll(".placeholder").forEach(el => el.classList.remove("hidden"));

// Деактивируем кнопку "Сохранить"
const saveBtn = form.querySelector('input[type="submit"]');
saveBtn.disabled = true;
saveBtn.classList.remove("active");


// Показываем уведомление
showNotice("Товар успешно добавлен");